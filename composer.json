{
    "name": "kambo/karsk",
    "description": "Karsk - java bytecode writer",
    "license": "MIT",
    "type": "library",    
    "keywords": [],
    "authors": [
        {
            "name": "Bohuslav Simek",
            "email": "bohuslav@simek.si"
        }
    ],
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "7.*" ,
        "mikey179/vfsStream": "~1",
        "squizlabs/php_codesniffer": "3.*",
        "phpdocumentor/phpdocumentor": "2.*"
    },
    "autoload": {
        "psr-4": {
            "Kambo\\Karsk\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kambo\\Tests\\Karsk\\": "tests/"
        }
    },
    "scripts": {
        "unit-test": "./vendor/bin/phpunit tests/Unit/",
        "coverage-html": "./vendor/bin/phpunit --coverage-html coverage tests/Unit/",
        "coverage-xml": "./vendor/bin/phpunit --coverage-clover=coverage.xml",
        "checkstyle": "./vendor/bin/phpcs --standard=PSR2 src",
        "generate-api-document": "./vendor/bin/phpdoc -d ./src -t ./docs/api"
    }
}
